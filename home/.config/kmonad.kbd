  _    _    _    _    _    _    _    _    _    _    _    _         _
  _    _    _    _              _              _    _    _    _    _    _
                                                              _    _    _
)

(defalias
  ssr A-S-left    ;; shrink selection
  cld A-C-S-down  ;; copy line down
  clu A-C-S-up    ;; copy line up
  sxp A-S-rght    ;; expand selection
)

(deflayer copy-line-and-modify-selection
